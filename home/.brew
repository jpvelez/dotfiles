# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
# Don’t forget to add `$(brew --prefix coreutils)/libexec/gnubin` to `$PATH`.
brew install coreutils --default-names

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils --default-names

# Other GNU tools
brew install gnu-indent --default-namess
brew install gnutls --default-names
brew install gnu-tar --default-names
brew install gawk --default-names
brew install parallel
brew install nmap

tap homebrew/dupes
brew install homebrew/dupes/grep --default-names
brew install homebrew/dupes/gnu-sed --default-name


# Install Bash 4
brew install bash

# Install more recent versions of vim and grep
brew install vim --override-system-vi

# Install htop
brew install htop-osx

# Install other useful binaries
brew install git
brew install sqlite
brew install tmux

# Install useful command line tools
brew install ack		# grep for source code
brew install jq		# grep for json
brew install json2csv
brew install tree	# recursive directory listing command
brew install webkit2png	# captures webpage screenshots
brew install parallel

brew install wget --enable-iri 	# wget with IRI support

# Install GNU c and fortran compilers, freetype, to make numpy / scipy happy
brew install apple-gcc42
brew install gfortran
brew install freetype

# Install python
brew install python

# Install heroku toolbelt
brew install heroku-toolbelt

# Install Redis
brew install redis

# Install Hadoop and Pig
brew install pig

# Install packer
brew tap homebrew/binary
brew install packer

# Install Beaker
brew install beaker
brew install docker

# Remove outdated versions from the cellar
brew cleanup
