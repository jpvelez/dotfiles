# Make sure we’re using the latest Homebrew
update

# Upgrade any already-installed formulae
upgrade

# Install GNU core utilities (those that come with OS X are outdated)
# Don’t forget to add `$(brew --prefix coreutils)/libexec/gnubin` to `$PATH`.
install coreutils --default-names

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
install findutils --default-names

# Other GNU tools
install gnu-indent --default-namess
install gnutls --default-names
install gnu-tar --default-names
install gawk --default-names
install parallel
install nmap

tap homebrew/dupes
install homebrew/dupes/grep --default-names
install homebrew/dupes/gnu-sed --default-name


# Install Bash 4
install bash

# Install more recent versions of vim and grep
install vim --override-system-vi

# Install htop
install htop-osx

# Install other useful binaries
install git
install sqlite
install tmux

# Install useful command line tools
install ack		# grep for source code
install jq		# grep for json
install json2csv
install tree	# recursive directory listing command
install webkit2png	# captures webpage screenshots 
install parallel

install wget --enable-iri 	# wget with IRI support

# Install GNU c and fortran compilers, freetype, to make numpy / scipy happy
install apple-gcc42
install gfortran
install freetype

# Install python
install python

# Install heroku toolbelt
install heroku-toolbelt

# Install Redis
install redis

# Install Hadoop and Pig
install pig

# Remove outdated versions from the cellar
cleanup
