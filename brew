# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# BASH #
########
brew install bash

# GNU UNIX COMMANDS #
######################
# Install GNU core utilities (those that come with OS X are outdated)
# Don’t forget to add `$(brew --prefix coreutils)/libexec/gnubin` to `$PATH`.
brew install coreutils --with-default-names

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils --with-default-names

brew tap homebrew/dupes
brew install gnu-which --with-default-names
brew install gnu-sed --with-default-names
brew install gawk --with-default-names
brew install grep --with-default-names
brew install gnu-tar --with-default-names
brew install gzip --with-default-names
brew install parallel
brew install nmap
brew install wget --with-iri 	# wget with IRI support

# UNIX TOOLS #
##############
# More recent versions of osx cli tools
brew install git
brew install make
brew install less
brew install vim --override-system-vi

# Other useful tools
brew install htop-osx
brew install sqlite
brew install tmux
brew install rsync
brew install jq		# grep for json
brew install tree	# recursive directory listing command
brew install keybase
brew tap thoughtbot/formulae
brew install rcm        # dotfile manager
# LANGUAGES #
#############
brew install Caskroom/cask/java
brew install scala
brew install maven
brew install sbt

# COMPILERS #
#############
brew install gcc 	# includes fortran

# DOCKER #
##########
brew install docker
brew install docker-machine
brew install Caskroom/cask/virtualbox
# Create default docker-machine VM in virtualbox
docker-machine create --driver virtualbox default
# Get env commands for new vm
docker-machine env default
export DOCKER_TLS_VERIFY="1"
export DOCKER_HOST="tcp://192.168.99.101:2376"
export DOCKER_CERT_PATH="/Users/jpvelez/.docker/machine/machines/default"
export DOCKER_MACHINE_NAME="default"
# Connect your shell to the default machine
eval "$(docker-machine env default)"

# HADOOP #
##########
brew install avro-tools

# EMACS #
#########
brew tap d12frosted/emacs-plus
brew install emacs-plus --with-cocoa --with-gnutls --with-librsvg --with-imagemagick --with-spacemacs-icon
brew linkapps

# Remove outdated versions from the cellar
brew cleanup
